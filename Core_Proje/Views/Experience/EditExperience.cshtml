@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "Deneyim Düzenle";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Deneyim Düzenleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        <input type="text" class="form-control" value="@Model.ExperienceID" name="ExperienceId">
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" value="@Model.Name" class="form-control" name="Name">
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        <input type="text" value="@Model.Date" class="form-control" name="Date">
                    </div>
                    <div class="form-group">
                        <label>Görsel URL</label>
                        <input type="text" value="@Model.ImageUrl" class="form-control" name="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" name="Description" rows="6">@Model.Description</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Güncelle</button>
                    <button type="reset" class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}
