@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    @Html.HiddenFor(x=>x.TestimonialID)
                    <div class="form-group">
                        @Html.Label("Ad Soyad")
                        @Html.TextBoxFor(x=>x.ClientName,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Şirket")
                        @Html.TextBoxFor(x=>x.Company,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Başlık")
                        @Html.TextBoxFor(x=>x.Title,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Resim Yolu")
                        @Html.TextBoxFor(x=>x.ImageUrl,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        @Html.Label("Yorum")
                        @Html.TextAreaFor(x=>x.Comment,6,3,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
