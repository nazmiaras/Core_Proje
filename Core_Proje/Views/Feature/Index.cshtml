@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Hakkımda Düzenleme Paneli </p>
                <form class="forms-sample">
                    @Html.HiddenFor(x=>x.FeatureID,new{@class="form-control"})
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Header,new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Görev</label>
                        @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
}
