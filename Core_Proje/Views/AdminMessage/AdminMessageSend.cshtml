@using EntityLayer.Concrete
@model WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Mesaj Gönderme Paneli </p>
                <form class="forms-sample" method="POST">
                    <div class="form-group">
                        <label>Konu</label>
                        @Html.TextBoxFor(x=>x.Subject,new{@class="form-control"})
                        <br />
                    </div>
                    <div class="form-group">
                        <label>Alıcı</label>
                        @Html.TextBoxFor(x=>x.Receiver,new{@class="form-control"})
                        <br />
                    </div>
                    <div class="form-group">
                        <label>Mesaj</label>
                        @Html.TextBoxFor(x=>x.MessageContent,new{@class="form-control"})
                        <br />
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>